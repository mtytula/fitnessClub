{% extends 'base.html.twig' %}
{% block body %}

    <!--Carousel Wrapper-->
    <div id="carousel-example-2" class="carousel slide carousel-fade" data-ride="carousel">
        <!--Indicators-->
        <ol class="carousel-indicators">
            <li data-target="#carousel-example-2" data-slide-to="0" class="active"></li>
            <li data-target="#carousel-example-2" data-slide-to="1"></li>
            <li data-target="#carousel-example-2" data-slide-to="2"></li>
        </ol>
        <!--/.Indicators-->
        <!--Slides-->
        <div class="carousel-inner" role="listbox" id="slides_wrapper">

            {% for activity in activities|slice(0,5) %}

                <div class="carousel-item">
                    <div class="view">
                        <div class="carousel-img"
                             style="background-image: url('{{ asset('assets/images/activity' ~ loop.index ~ '.jpg') }}')"></div>
                        <div class="mask rgba-black-slight"></div>
                    </div>
                    <div class="carousel-caption">
                        <h3 class="h3-responsive">{{ activity.name }}</h3>
                    </div>
                </div>
            {% endfor %}

            <!--/.Slides-->

            <!--Controls-->
            <a class="carousel-control-prev" href="#carousel-example-2" role="button" data-slide="prev">
                {#<span class="carousel-control-prev-icon" aria-hidden="true"></span>#}
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carousel-example-2" role="button" data-slide="next">
                {#<span class="carousel-control-next-icon" aria-hidden="true"></span>#}
                <span class="sr-only">Next</span>
            </a>
            <!--/.Controls-->
        </div>
        <!--/.Carousel Wrapper-->
        <div class="container text-center">

            <h2 class="my-5">Our Fitness club has plenty of activities <strong>You can participate in.</strong> </h2>
            
            <h3 class="mb-5"><strong><a href="{{ path('scheduler') }}">Go to scheduler</a></strong></h3>
            <!-- Card deck -->
            <div class="card-deck mb-5">

                {% for coach in coaches %}
                    <!-- Card -->
                    <div class="card mb-4">

                        <!--Card image-->
                        <div class="view overlay">
                            <img class="card-img-top"
                                 src="{{ asset(coach.picture) }}"
                                 alt="Coach">
                            <a href="{{ path('coach_show',{id: coach.id}) }}">
                                <div class="mask rgba-white-slight"></div>
                            </a>
                        </div>

                        <!--Card content-->
                        <div class="card-body">

                            <!--Title-->
                            <h4 class="card-title">{{ coach }}</h4>
                            <!--Text-->
                            <p class="card-text">{{ coach.description|length > 100 ? coach.description|slice(0, 100) ~ '...' : coach.description }}</p>
                            <!-- Provides extra visual weight and identifies the primary action in a set of buttons -->
                            <a href="{{ path('coach_show',{id: coach.id}) }}" class="btn btn-light-blue btn-md">Read more</a>

                        </div>

                    </div>
                    <!-- Card -->
                {% endfor %}

            </div>

        </div>
        <!-- Card deck -->
    </div>
{% endblock %}