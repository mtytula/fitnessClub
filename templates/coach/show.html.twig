{% extends 'base.html.twig' %}
{% block title %}Coach details{% endblock %}
{% block body %}
    <div class="container">
        <section class="my-5 px-3">
            <div class="row">
                <div class="col-lg-4 mb-lg-0 mb-5 text-center">
                    <div class="avatar">
                        <img src="{{ asset(coach.picture) }}"
                             class="rounded-circle z-depth-1 img-fluid" alt="Sample avatar">
                    </div>
                    <h5 class="font-weight-bold mt-4 mb-3">Coach</h5>
                    <p class="text-uppercase blue-text">
                        <strong> {{ coach.firstName }} {{ coach.lastName }} </strong>
                    </p>
                    <ul class="list-unstyled mb-0">
                        <!-- Facebook -->
                        <a class="p-2 fa-sm" href="#">
                            <i class="fa fa-pencil blue-text"></i> Add opinion about this couch
                        </a>
                    </ul>
                </div>
                <div class="col-lg-8">
                    {% if is_granted('ROLE_ADMIN') %}
                    <a class="btn btn-sm btn-primary pull-right" href="{{ path('coach_update',{id: coach.id}) }}">Edit</a>
                    <a class="btn btn-sm btn-danger pull-right" href="{{ path('coach_delete',{id: coach.id}) }}">Delete</a>
                    {% endif %}
                    <h3 class="font mb-3"><strong>Informations:</strong></h3>
                    <div class="row">
                        <div class="col-sm-12">
                            <p class="grey-text">{{ coach.description }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}